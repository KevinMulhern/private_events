<div class="row">
	<div class="col-sm-8 col-sm-offset-2">
		<div class="well well-lg">
			<h2>Edit Event</h2>
			<%= form_for(@event) do |f| %>

				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control", autofocus: true %>

				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control", :size => "20x5" %>

				<%= f.label :location %>
				<%= f.text_field :location, class: "form-control" %>

				<div class="row">
					<div class="col-sm-4">

					<%= f.label "Date" %>
					<div class="input-group date">
						<%= f.text_field :eventDate, :value => @event.eventDate.strftime("%d/%m/%Y"), class: "form-control" %><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
					</div>
					</div>

					<div class="col-sm-4 col-sm-offset-1">
						<%= f.label "Start Time" %>
						<%= f.text_field :startTime, :value => @event.startTime.strftime("%H:%M"), class: "time ui-timepicker-input form-control"%>
					</div>
				</div>

				<div class="row create-bottom">
					<div class="col-sm-4 col-sm-offset-4">
					<%= f.submit "Save Changes", class: "form-control btn btn-success create-button"%>
						
					</div>
					
				</div>
			<% end %>
			
		</div>
	</div>
</div>

<script type="text/javascript">
$(document).ready(function(){
    $('.input-group.date').datepicker({
    	format: "dd/mm/yyyy",
    	todayBtn: "linked",
    	autoclose: true
    });

    $('.time').timepicker({
    	 'timeFormat':'H:i',
    	  'scrollDefault': 'now'
   	});
});
</script>



